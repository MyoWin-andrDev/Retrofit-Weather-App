<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">
    <!-- Location Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/colorPrimaryContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvLocationName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="London"
                android:textColor="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:id="@+id/tvRegionCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Greater London, United Kingdom"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvLocalTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="2023/05/13 14:30"
                android:textColor="?attr/colorSecondary"
                android:textStyle="bold"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Current Weather Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cvLocation"
        android:backgroundTint="?attr/colorPrimaryContainer"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Temperature Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvTempC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    tools:text="18°C"
                    android:textColor="?attr/colorOnPrimaryContainer"/>

                <TextView
                    android:id="@+id/tvTempF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:textColor="#757575"
                    tools:text="64°F"
                    android:textColorHighlight="?attr/colorPrimaryInverse"/>
            </LinearLayout>

            <!-- Weather Condition -->
            <TextView
                android:id="@+id/tvCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:text="Partly Cloudy"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"/>

            <!-- Weather Details (LinearLayout ) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Wind -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind:"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15 kph (NW)"
                        android:textColor="?attr/colorTertiary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Humidity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity:"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvHumidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="65%"
                        android:textColor="?attr/colorTertiary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- UV Index -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UV Index:"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvUV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="5"
                        android:textColor="?attr/colorTertiary"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Visibility -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visibility:"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvVisibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10 km"
                        android:textColor="?attr/colorTertiary"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>