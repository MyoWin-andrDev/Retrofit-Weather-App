<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- Astronomy Location Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardAstronomy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Location Name Header -->
            <TextView
                android:id="@+id/tvCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="London"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="12dp"/>

            <!-- Region -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Region:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="City of London, Greater London"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Country -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="United Kingdom"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Distance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance from Yangon:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="8,983.98 km"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Local Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local Time:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvLocalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="11:53 AM (2023-09-11)"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp"/>

            <!-- Sunrise -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunrise:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvSunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="07:08 AM"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Sunset -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Sunset:"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvSunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="04:20 PM"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Divider before moon data -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="8dp"/>

            <!-- Moonrise -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moonrise:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvMoonrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="08:42 PM"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Moonset -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moonset:"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvMoonset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="05:16 AM"
                    android:textColor="?attr/colorSecondary"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>